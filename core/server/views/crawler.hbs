<!doctype html>
<!--[if (IE 8)&!(IEMobile)]><html class="no-js lt-ie9" lang="en"><![endif]-->
<!--[if (gte IE 9)| IEMobile |!(IE)]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>
   <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

   <title>Ghost Admin</title>
   <link rel="stylesheet" href="{{asset "bootstrap.min.css" ghost="true" minifyInProduction="true"}}" />
   <link rel="stylesheet" href="{{asset "crawler.css" ghost="true" minifyInProduction="true"}}" />
</head>
<body>
   <div class="container">
      <section id="section-crawler">
         <h2>Crawling Tool</h2>
         <div class="row">
            <div class="col-md-6">
               <form>
                  <div class="form-group">
                     <label for="txtUrl">Url</label>
                     <input type="text" class="form-control" id="txtUrl" placeholder="Url" value="http://suckhoe.vn/lam-dep/tang-can-giam-can">
                  </div>
                  <div class="form-group">
                     <label for="txtLandingPageItemClass">Landing Page Item Class</label>
                     <input type="text" class="form-control" id="txtLandingPageItemClass" placeholder="Landing Page Item Class" value=".assetdesc-img">
                  </div>
                  <div class="form-group">
                     <label for="txtDiscoverClass">Discover Class</label>
                     <input type="text" class="form-control" id="txtDiscoverClass" placeholder="Discover Class" value=".main-content .assettile a">
                  </div>
                  <div class="form-group">
                     <label for="txtImageClass">Image Class</label>
                     <input type="text" class="form-control" id="txtImageClass" placeholder="Image Class" value=".journal-content-article img">
                  </div>
                  <div class="form-group">
                     <label for="txtTitle">Title Class</label>
                     <input type="text" class="form-control" id="txtTitle" placeholder="Title class" value=".title-content h1">
                  </div>
                  <div class="form-group">
                     <label for="txtContent">Content Class</label>
                     <input type="text" class="form-control" id="txtContent" placeholder="Content Class" value=".journal-content-article">
                  </div>
                  <div class="form-group">
                     <label for="ddlMaxDepth">Max Depth</label>
                     <select id="ddlMaxDepth" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                     </select>
                  </div>

                  <button type="button" id="btnSubmit" class="btn btn-primary">Submit</button>
                  <button type="button" id="btnCancel" class="btn btn-warning">Cancel</button>
               </form>
            </div>
         </div>

         <h2>Crawled Contents</h2>
         <table id="listPosts" class="clearfix table table-hover">
            <th>Image</th>
            <th>Title</th>
            <th>Saved</th>
            <th>Actions</th>
            <!-- append <tr> here -->
         </table>
      </section>
      
      <section id="section-edit" class="col-md-10" style="display: none; margin-bottom: 100px;">
         <form id="frmEditPost">
            <div class="form-group">
               <label>Image</label>
               <div style="width: 150px;">
                   <img id="edit-image" style="width: 100%; height: 100%;">
               </div>               
            </div>
            <div class="form-group">
               <label for="edit-title">Title</label>
               <input type="text" class="form-control" id="edit-title" placeholder="Title">
            </div>            
            <div class="form-group">
               <label for="edit-tag">Tag</label>
               <input type="text" class="form-control" id="edit-tag" placeholder="Tag">
            </div>
            <div class="form-group">
               <label for="edit-content">Content</label>
               <textarea class="form-control" id="edit-content" placeholder="Content"></textarea>
            </div>
            <div class="form-group">               
               Delete &nbsp; <input id="edit-delete" placeholder="Content" type="checkbox"></textarea>
            </div>
            
            <button type="button" id="btn-edit-save" class="btn btn-primary">Save</button>
            <button type="button" id="btn-edit-spin" class="btn btn-primary">Spin</button>
            <button type="button" id="btn-edit-save-to-ghost" class="btn btn-primary">Save to Ghost</button>
            <button type="button" id="btn-edit-delete" class="btn btn-primary">Delete</button>
            <button type="button" id="btn-edit-cancel" class="btn btn-warning">Cancel</button>
         </form>
      </section>
   </div>

   <script src="{{asset "jquery-3.1.1.min.js" ghost="true" minifyInProduction="true"}}"></script>
   <script src='//cdn.tinymce.com/4/tinymce.min.js'></script>
   <script src="{{asset "dataspin.js" ghost="true" minifyInProduction="true"}}"></script>
   <script src="{{asset "spindata.js" ghost="true" minifyInProduction="true"}}"></script>
   <script src="{{asset "crawler.js" ghost="true" minifyInProduction="true"}}"></script>
</body>
</html>
